{
  "name": "pixi-tilemap",
  "version": "2.1.4",
  "description": "Pixi-tilemap provides tilemap shaders and tilemap renderer for pixi.js (v3 and v4). Used in rpgmaker MV.",
  "author": "Ivan Popelyshev",
  "contributors": [
    "Ivan Popelyshev <ivan.popelyshev@gmail.com>"
  ],
  "homepage": "http://www.rpgmakerweb.com/",
  "bugs": "https://github.com/pixijs/pixi-tilemap/issues",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pixijs/pixi-tilemap.git"
  },
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "typings": "./index.d.ts",
  "types": "./index.d.ts",
  "exports": {
    "import": "./dist/esm/index.js",
    "require": "./dist/index.js",
    "browser": "./dist/pixi-tilemap.umd.production.min.js"
  },
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build --format cjs,esm,umd",
    "test": "tsdx test",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "serve": "serve",
    "build:types": "rimraf ./compile && tsc -p ./tsconfig.compile.json && api-extractor run",
    "docs": "typedoc --out ./docs/ --readme README.md ./src/"
  },
  "files": [
    "dist",
    "src",
    "index.d.ts",
    "README.md"
  ],
  "engines": {
    "node": ">=10"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [],
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "peerDependencies": {
    "@pixi/canvas-renderer": "^5.3.3",
    "@pixi/constants": "^5.3.3",
    "@pixi/core": "^5.3.3",
    "@pixi/display": "^5.3.3",
    "@pixi/graphics": "^5.3.3",
    "@pixi/math": "^5.3.3",
    "@pixi/sprite": "^5.3.3",
    "@pixi/utils": "^5.3.3",
    "pixi.js": "^5.3.3"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.11.4",
    "@pixi-build-tools/globals": "1.0.2",
    "@size-limit/preset-small-lib": "^4.7.0",
    "del": "^6.0.0",
    "husky": "^4.3.0",
    "jsdoc": "^3.6.6",
    "mkdirp": "^1.0.4",
    "rimraf": "^3.0.2",
    "serve": "^11.3.2",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.5"
  }
}
