{
    "extends": "@pixi/extension-scripts/tsconfig",
    "compilerOptions": {
        // Avoid upstream issues with pixi.js
        "skipLibCheck": true,
        // TODO: Remove this when null checks are strict
        "strictNullChecks": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "lib"
    ]
}
